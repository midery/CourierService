<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liarstudio.courierservice.Activities.SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Измерение массы"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <RadioGroup
            android:id="@+id/ragioGroupWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:checkedButton="@+id/radioButtonKG">

            <RadioButton
                android:id="@+id/radioButtonKG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/radioButton2"
                android:layout_weight="1"
                android:text="Килограммы" />

            <RadioButton
                android:id="@+id/radioButtonLB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="Фунты" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/radioGroupVol"
            android:text="Измерение объема"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginTop="5dp" />


        <RadioGroup

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/ragioGroupWeight"
            android:checkedButton="@+id/radioButtonSM"
            android:layout_alignParentEnd="true"
            android:id="@+id/radioGroupVol">

            <RadioButton
                android:id="@+id/radioButtonSM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Сантиметры" />

            <RadioButton
                android:id="@+id/radioButtonInch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="Дюймы" />
        </RadioGroup>

    </RelativeLayout>

</ScrollView>
