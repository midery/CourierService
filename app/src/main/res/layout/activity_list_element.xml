<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lvCell"
    android:paddingLeft="5dp"
    >

    <TextView
        android:id="@+id/twName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:clickable="false"

        android:text="Название посылки"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:clickable="false"
        android:id="@+id/twAddress"
        android:layout_below="@+id/twName"
        android:text="Адрес:"
        />

    <TextView
        android:id="@+id/twDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:clickable="false"
        android:layout_below="@+id/twAddress"
        android:text="Дата:" />
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:clickable="false"
        android:text="Показать на карте"
        android:layout_alignParentRight="true"/>

</RelativeLayout>